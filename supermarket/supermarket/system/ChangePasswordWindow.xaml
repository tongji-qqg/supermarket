<Window x:Class="supermarket.system.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangePasswordWindow" Height="300" Width="300">
    <Grid>
        <Label Content="密码:" HorizontalAlignment="Left" Margin="28,53,0,0" VerticalAlignment="Top" Height="35" Width="73"/>
        <Label Content="新密码:" HorizontalAlignment="Left" Margin="28,111,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.394,0.407" Height="24" Width="73"/>
        <PasswordBox Margin="106,54,53,191" RenderTransformOrigin="0.481,0.57" Name="OldPassword"/>
        <PasswordBox Margin="106,111,53,134" Name="NewPassword"/>
        <Button Content="确定" HorizontalAlignment="Left" Margin="44,199,0,0" VerticalAlignment="Top" Width="75" Click="ConfirmButton_Click"/>
        <Button Content="取消" HorizontalAlignment="Left" Margin="164,199,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>

    </Grid>
</Window>
